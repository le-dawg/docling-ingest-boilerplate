# SharePoint Configuration
# Create an Azure AD App Registration with Microsoft Graph API permissions
SHAREPOINT_TENANT_ID=your-tenant-id-here
SHAREPOINT_CLIENT_ID=your-client-id-here
SHAREPOINT_CLIENT_SECRET=your-client-secret-here
SHAREPOINT_SITE_URL=https://yourtenant.sharepoint.com/sites/yoursite
SHAREPOINT_FOLDER_PATH=Shared Documents/PDFs

# VoyageAI Configuration
VOYAGE_API_KEY=your-voyage-api-key-here

# MongoDB Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority
MONGODB_DB=your-database-name
MONGODB_COLLECTION=pdf_chunks

# Optional: MongoDB Atlas Vector Search Index Name
VECTOR_INDEX=embedding_vector_index

# Azure Storage (Optional - alternative to SharePoint)
AZURE_STORAGE_CONNECTION_STRING=your-connection-string-here
AZURE_STORAGE_CONTAINER=pdfs

# Chunking Configuration
CHUNK_MAX_TOKENS=768
CHUNK_MERGE_PEERS=true
TOKENIZER_MODEL=voyageai/voyage-context-3

# VoyageAI Embedding Configuration
VOYAGE_MODEL=voyage-context-3
VOYAGE_OUTPUT_DIM=1024
VOYAGE_OUTPUT_DTYPE=float

# Processing Configuration
DEBUG_CHUNK_IMGS=false
DO_OCR=false
MIN_FIGURE_HEIGHT_PX=120

# Artifacts Storage
IMAGE_ROOT=artifacts/images
METADATA_ROOT=artifacts/documents
